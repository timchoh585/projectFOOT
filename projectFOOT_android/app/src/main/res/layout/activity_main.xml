<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="foot.project.projectfoot.MainActivity">

    <ca.hss.heatmaplib.HeatMap
        android:id="@+id/left_foot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        app:minOpacity="0"
        app:maxOpacity="255"
        app:blur="0.01"
        app:maxDrawingHeight="200dp"
        app:maxDrawingWidth="200dp"
        app:transparentBackground="true"
        android:background="@drawable/left_foot" />

    <TextView
        android:id="@+id/step_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"/>

    <TextView
        android:id="@+id/augment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"/>

    <Button
        android:id="@+id/clear_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_data"
        android:layout_weight="0.2"/>

</LinearLayout>